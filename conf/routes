# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

#HomeController
GET      /                           controllers.HomeController.index
GET      /ws                         controllers.HomeController.socketTest
GET      /wss                        controllers.HomeControllers.secureSocketTest
GET      /test                       controllers.HomeController.test(userID: String)

#UserController
POST     /token                      controllers.UserController.getToken
POST     /create                     controllers.UserController.createUser

#SensorController
GET      /device                     controllers.SensorController.getUserDevices
POST     /device/:deviceID           controllers.SensorController.registerDevice(deviceID)
DELETE   /device/:deviceID           controllers.SensorController.deleteUserDevice(deviceID)

POST    /sensor/0/:deviceID          controllers.SensorController.receiveTemperature(deviceID)
GET     /sensor/0/:deviceID          controllers.SensorController.getTemperature(deviceID, page: Int ?= 1)
POST    /sensor/1/:deviceID          controllers.SensorController.receiveHumidity(deviceID)
GET     /sensor/1/:deviceID          controllers.SensorController.getHumidity(deviceID, page: Int ?= 1)
POST    /sensor/2/:deviceID          controllers.SensorController.receiveLight(deviceID)
GET     /sensor/2/:deviceID          controllers.SensorController.getLight(deviceID, page: Int ?= 1)